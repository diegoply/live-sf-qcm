{% extends 'base.html.twig' %}

{% block title %}Questionnaires{% endblock %}

{% block body %}
    <h1>Liste des Questionnaires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Matière</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for questionnaire in questionnaires %}
            <tr>
                <td>{{ questionnaire.id }}</td>
                <td>{{ questionnaire.titre }}</td>
                <td>{{ questionnaire.matiere }}</td>
                <td>
                    <a href="{{ path('app_questionnaire_show', {'id': questionnaire.id}) }}" class="btn btn-success">Détails</a>
                    <a href="{{ path('app_questionnaire_edit', {'id': questionnaire.id}) }}" class="btn btn-success">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun questionnaire</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_questionnaire_new') }}" class="btn btn-primary">Créer un nouveau questionnaire</a>
{% endblock %}
